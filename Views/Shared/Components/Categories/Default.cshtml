<!--494.  Use IEnumerable model to call list of pages-->
@model IEnumerable<Category>
<!--495.  Create a ul/li to display all products-->
<ul class="list-group">
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">All Products</a>
    </li>

    <!--496.  Use foreach to display item category by name-->
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Products"
               asp-action="ProductsByCategory"
               asp-route-categorySlug="@item.Slug">@item.Name</a>
        </li>
    }
    <!--497.  Go to main Layout and call this -->
</ul>

