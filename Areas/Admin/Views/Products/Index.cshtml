@model IEnumerable<MSSAProject.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<!--287.  Change Title and Header-->
<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!--288.  Delete columns not needed scuh as ID, Slug, and Description-->

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!--289.  Delete rows not needed scuh as ID, Slug, and Description-->

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @item.Price.ToString("C2")
                </td>

                <td>
                    <!--290.  Adjust CatID to Cat.Name for FK reference-->
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>

                <td>
                    <img src="~/media/products/@item.Image" width="100" alt="" />
                </td>
                <td>
                    <!--291.  Change action link to tag herlps-->
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <!--292.  Go to ProductsController Page-->
                </td>
            </tr>
        }
    </tbody>
</table>

<!--370.  Add pagination here in a div to center it and edit variables-->
<div class="d-flex w-100 justify-content-center">
    <Pagination page-count="@ViewBag.TotalPages" page-target="/admin/products"
                page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></Pagination>
</div>
